<div class='container px-5 px-sm-0'>
  <%#= render 'layouts/errors', obj: @group %>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Event Mail</h1>
  		<%= form_with url: group_send_mail_path(@group), method: :get, local:true do |f| %>
        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :mail_title, class: 'form-control group_mail_title' %>
        </div>
        <div class="form-group">
          <%= f.label :Content %>
          <%= f.text_area :mail_content, class: 'form-control mail_content' %>
        </div>
        <div class="text-right">
          <%= f.submit "送信", class: 'btn btn-success' %>
        </div>
      <% end %>
		</dev>
  </div>
</div>
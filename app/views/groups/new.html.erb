<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model:@group,local:true do |f| %>
      <%= render 'layouts/errors', obj: @group %>
        <div class="form-group">
          <%= f.label :"グループ名" %>
          <%= f.text_field :name, class: 'form-control group_name' %>
        </div>
        <div class="form-group">
          <%= f.label :"紹介文" %>
          <%= f.text_area :introduction, class: 'form-control group_introduction' %>
        </div>
        <div class="form-group">
          <%= f.label :"グループ画像" %>
          <%= f.file_field :image, class: 'form-control group_image', accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

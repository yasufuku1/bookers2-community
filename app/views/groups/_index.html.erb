<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_image, size: '50x50' %></td>
        <td><%= group.name %></td>
        <td><%= group.introduction %></td>
        <td><%= link_to 'edit', edit_group_path(group) %></td>
      </tr>
    <% end %>
  </tbody>
</table>